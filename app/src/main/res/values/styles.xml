<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textColorPrimary">@color/white</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="PlayerEditText">
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_margin">4dp</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="PlayerEditText.Memo">
    <item name="android:gravity">top</item>
    <item name="android:singleLine">false</item>
  </style>

  <style name="PlayerRadioButton">
    <item name="android:paddingLeft">2dp</item>
    <item name="android:paddingRight">2dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="DataEditItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textColorHint">@color/white</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@drawable/app_dark_blue</item>
  </style>

  <style name="SearchToolText" parent="DataEditItem">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="item_setting_border">
    <item name="android:background">@color/divider_white</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
  </style>

</resources>
